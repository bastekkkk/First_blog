%h1 All articles
%p
  =link_to "crate new article", new_article_path, class: "btn btn-outline-info btn-md"
%table.table.table-borderless
  %thead
    %tr
      %th{:scope => "col"} ID
      %th{:scope => "col"} Title
      %th{:scope => "col"} Description
  %tbody
  - @articles.each do |d|
    %tr
      %td{:scope => "row"}= d.id
      %td= d.title
      %td= d.description
      %td= link_to "Show", article_path(d), class:"btn btn-primary"
      %td= link_to "Delete", article_path(d), method: :Delete , data:{confirm: "Are you sure?"}, class:"btn btn-danger"

